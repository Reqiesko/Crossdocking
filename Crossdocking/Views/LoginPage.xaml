<UserControl x:Class="Crossdocking.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crossdocking.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Username" Margin="5" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Username}" Width="200px"/>

            <Label Content="Password" Margin="5" HorizontalAlignment="Center"/>
            <PasswordBox PasswordChanged="PasswordBox_PasswordChanged" Width="200px"/>

            <Button Content="Login" Command="{Binding LoginCommand}" Margin="10" Width="60px"/>
        </StackPanel>
    </Grid>
</UserControl>
