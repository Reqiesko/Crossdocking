<Window x:Class="Crossdocking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Crossdocking.Views"
        xmlns:vm="clr-namespace:Crossdocking.ViewModels"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="500" ResizeMode="NoResize">

    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vm:LoginPageVM}">
                <views:LoginPage/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ComputePageVM}">
                <views:ComputePage/>
            </DataTemplate>
        </Grid.Resources>
        <ContentControl Content="{Binding CurrentViewModel}"></ContentControl>
    </Grid>
</Window>